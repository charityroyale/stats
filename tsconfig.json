{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["node_modules"]
}
